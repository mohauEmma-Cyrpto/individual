<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.payrollsystem.LoginController" alignment="CENTER" spacing="20" styleClass="root">
  <Label text="Login to Payroll System" styleClass="title"/>

  <GridPane hgap="10" vgap="10" alignment="CENTER">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="roleCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
  </GridPane>

  <Button fx:id="loginButton" text="Login" onAction="#login" styleClass="button"/>
  <Label fx:id="statusLabel" text="" styleClass="status-label"/>
</VBox>